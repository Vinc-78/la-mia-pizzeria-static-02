@using Microsoft.AspNetCore.Html

@{
    Layout = null;
    ViewData["Nome"] = "Vincenzo";
    ViewData["Cognome"] = "Di Costanzo";
}


@{
    int SommaNumeri(int n)
    {
        int somma = 0;

        for (int i = 0; i <= n; i++)
        {
            somma += i;
        }
        return somma;
        

    }

    Func<dynamic, IHtmlContent> ContaLetteraA()
    {
        int somma = 0;

        string frase = "nel mezzo del cammin di nostra vita";


        foreach (char ele in frase)
        {
            if (ele == 'a') { somma += 1; } 
        }
        return @<p>@somma</p>
    ;

    }

    string SommaRandom(int min, int max)
    {
        Random ele = new Random();

        int contatore = 0;

        string numeri = "";
        string variabile = "";

        while (contatore < 20)
        {
            int nuovo = ele.Next(min, max);

            if (nuovo >= 20 && nuovo <= 70)
            {
                variabile = nuovo.ToString();
                numeri += variabile + " ";
                contatore++;
            }    
            
        }

        return numeri;


    }

     Func<dynamic, IHtmlContent> StampaData()
    {
        return @<div>@DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss")</div>;
    }

    Func<dynamic, IHtmlContent> StampaDataCalcolata()
    {
        return 
        @<div>@DateTime.Today.AddDays(-7)</div>;
        <div>@DateTime.Today.DayOfWeek</div>;
        <div>@DateTime.Today.AddYears(1).DayOfWeek</div>;
    }

    



}


